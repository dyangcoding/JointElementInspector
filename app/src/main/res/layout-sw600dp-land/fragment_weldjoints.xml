                <TextView
                    android:id="@+id/weldJoints_Spatter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="8dp"
                    android:text="@string/Spatter"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/weldJoints_TempColours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="8dp"
                    android:text="@string/TempColours"
                    android:textSize="18sp"/>
            </TableRow>
        </TableLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </ListView>
    </LinearLayout>
</HorizontalScrollView>