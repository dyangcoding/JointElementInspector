<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/weldJointsHeaderText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:fontFamily="serif"
        android:gravity="left"
        android:text="@string/weldjoints"
        android:textStyle="normal"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:fadeScrollbars="false"
        android:fillViewport="true">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/weldJointsHeader"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:stretchColumns="*">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/weldJoints_joints"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:gravity="bottom|center"
                        android:padding="8dp"
                        android:text="@string/joints"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <TextView
                        android:id="@+id/weldJoints_itemType"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:gravity="bottom|center"
                        android:padding="8dp"
                        android:text="@string/itemType"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_result"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="@string/result"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_Crack"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="@string/Crack"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_CraterCrack"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="@string/CraterCrack"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_SurfacePore"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="@string/SurfacePore"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_EndCraterPipe"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/EndCraterPipe"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_LackOfFusion"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/LackOfFusion"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_IncRootPenetration"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/IncRootPenetration"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_ContinousUndercut"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/ContinousUndercut"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_IntUndercut"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/IntUndercut"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_ShrinkGrooves"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/ShrinkGrooves"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_ExcWeldMetal"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/ExcWeldMetal"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_ExcConvex"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/ExcConvex"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_ExcPenetration"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/ExcPenetration"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_IncWeldToe"
                        android:layout_width="62dp"
