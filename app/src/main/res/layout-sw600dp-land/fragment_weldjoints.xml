<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/weldJointsHeaderText"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="6dp"
                  android:gravity="left"
                  android:text="@string/weldjoints"/>

        <TableLayout
            android:id="@+id/weldJointsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/weldJoints_joints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="8dp"
                    android:text="@string/joints"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/weldJoints_itemType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="8dp"
                    android:text="@string/itemType"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/weldJoints_Crack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="8dp"
                    android:text="@string/Crack"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/weldJoints_CraterCrack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="8dp"
                    android:text="@string/CraterCrack"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/weldJoints_SurfacePore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="8dp"
                    android:text="@string/SurfacePore"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/weldJoints_EndCraterPipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="8dp"
                    android:text="@string/EndCraterPipe"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/weldJoints_LackOfFusion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="8dp"
                    android:text="@string/LackOfFusion"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/weldJoints_IncRootPenetration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
