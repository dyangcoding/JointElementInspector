                    android:text="@string/IntUndercut"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/weldJoints_ShrinkGrooves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="8dp"
