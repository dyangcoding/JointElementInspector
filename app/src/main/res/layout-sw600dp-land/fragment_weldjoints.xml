                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_Sagging"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/Sagging"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_BurnThrough"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/BurnThrough"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_IncFilledGroove"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/IncFilledGroove"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_ExcAsymFilledWeld"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/ExcAsymFilledWeld"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_RootConcavity"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/RootConcavity"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_RootPorosity"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/RootPorosity"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_PoorRestart"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/PoorRestart"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_InsThroatThick"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/InsThroatThick"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_ExcThoratThick"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/ExcThoratThick"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_ArcStrike"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/ArcStrike"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_Spatter"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/Spatter"
                        android:textSize="18sp"
                        android:textStyle="normal"/>

                    <parsa_plm.com.jointelementinspector.customLayout.VerticalTextView
                        android:id="@+id/weldJoints_TempColours"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/border"
                        android:fontFamily="serif"
                        android:padding="8dp"
                        android:text="@string/TempColours"
                        android:textSize="18sp"
                        android:textStyle="normal"/>
                </TableRow>
            </TableLayout>

            <ListView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/listview"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
            </ListView>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
